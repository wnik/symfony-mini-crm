{% extends 'dashboard/index.html.twig' %}
{% block content %}
    <div class="page-edit">
        {% set successMessages = app.flashes('success') %}
        {% if successMessages %}
            {% for message in successMessages %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
        <div class="header">
            <h1>Add new file</h1>
        </div>
        <div class="edit-form">
            {{ form_start(form, { attr: { class: 'col-lg-6 col-md-6 col-sm-6 col-xs-12 row' } }) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}