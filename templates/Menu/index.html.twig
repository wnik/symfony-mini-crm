<div class="navbar-collapse collapse sidebar-navbar-collapse">
    <ul class="nav navbar-nav">
        {% for item in items %}
            <li>
                <a href="{{ url('dashboard') ~ item.getSlug }}" {% if item.getSlug in route %} class="active text-center" {% else %} class="text-center" {% endif %}>
                    {% if item.getIcon %}
                        <i class="fa {{ item.getIcon }}"></i>
                    {% endif %}
                    {{ item.getName }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>